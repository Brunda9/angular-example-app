pipeline {
    agent {
        node {
            label 'DockerIO-4'
        }
    }

    tools {
        nodejs 'Nodejs'
    }

    stages {
        stage('Workspace cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [
                        [url: 'https://github.com/Brunda9/angular-example-app', credentialsId: 'Brunda_github_new_token']
                    ],
                    extensions: [
                        // Enable sparse checkout
                        [$class: 'SparseCheckoutPaths', sparseCheckoutPaths: [[path: 'Dockerfile']]]
                    ]
                ])
            }
        }
    }
}

